{
  "tabWidth": 4,
  "arrowParens": "avoid",
  "trailingComma": "none",
  "printWidth": 100,
  "endOfLine": "auto",
  "overrides": [
    {
      "files": "*.{json,yml,yaml}",
      "options": {
        "tabWidth": 2,
        "proseWrap": "always"
      }
    }
  ],
  "plugins": ["prettier-plugin-organize-imports", "prettier-plugin-packagejson"]
}
