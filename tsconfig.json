{
    "compilerOptions": {
        "strict": true,
        "noImplicitOverride": true,
        "module": "CommonJS",
        "target": "ES2020",
        "types": ["jest"],
        "sourceMap": true,
        "declaration": true,
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "strictNullChecks": true
    },
    "include": ["src/**/*.ts", "jest.config.ts"],
    "exclude": ["dist", "node_modules"]
}
